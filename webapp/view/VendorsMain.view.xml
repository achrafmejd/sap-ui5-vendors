<mvc:View
	controllerName="vendors.controller.VendorsMain"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:mc="sap.suite.ui.microchart"
	xmlns:sfb="sap.ui.comp.smartfilterbar"
	xmlns:table="sap.ui.table"
	>
	 	<!-- SmartFilterBar - Start -->
        <sfb:SmartFilterBar
		    id="smartFilterBar"
		    entitySet="VENDORSHeadersSetSet"
		    basicSearchFieldName="Lifnr"
		    persistencyKey="UniqueAndStablePersistencyKey">
            <sfb:controlConfiguration>
                <sfb:ControlConfiguration id="_IDGenControlConfiguration1" key="Lifnr" visibleInAdvancedArea="true" filterType="single" />
            </sfb:controlConfiguration>
        </sfb:SmartFilterBar>
		<!-- SmartFilterBar - End -->

		<!-- Tiles Statistics - Start -->
		<FlexBox id="_IDGenFlexBox1" class="flexbox-tiles-container" direction="Row" justifyContent="SpaceAround">
			<GenericTile id="_IDGenGenericTile1" press="press" header="Fournisseurs" subheader="basÃ© au Maroc" frameType="TwoByOne">
				<tileContent>
					<TileContent id="_IDGenTileContent1" >
						<content>
							<mc:RadialMicroChart id="_IDGenRadialMicroChart1" size="Responsive" percentage="0.00" alignContent="Right" valueColor="Neutral"/>
						</content>
					</TileContent>
				</tileContent>
			</GenericTile>
			<GenericTile id="_IDGenGenericTile2" press="press" header="Fournisseurs" subheader="francophones" frameType="OneByOne">
				<tileContent>
					<TileContent id="_IDGenTileContent22">
						<content>
							<mc:RadialMicroChart id="_IDGenRadialMicroChart2" size="Responsive" percentage="0.00" alignContent="Right" valueColor="Neutral"/>
						</content>
					</TileContent>
				</tileContent>
			</GenericTile>
			<GenericTile id="_IDGenGenericTile3" press="press" header="Fournisseurs" subheader="personne phyisique" frameType="OneByOne">
				<tileContent>
					<TileContent id="_IDGenTileContent33">
						<content>
							<mc:RadialMicroChart id="_IDGenRadialMicroChart3" size="Responsive" percentage="0.00" alignContent="Right" valueColor="Neutral"/>
						</content>
					</TileContent>
				</tileContent>
			</GenericTile>
		</FlexBox>
		<!-- Tiles Statistics - End -->

		<!-- Grid Table - Start -->
		 <table:Table id="table"   rows="{/}" enableColumnFreeze="true" selectionMode="MultiToggle" alternateRowColors="true" rowActionCount="2">
		 	<table:extension>
				<OverflowToolbar id="_IDGenOverflowToolbar1" style="Clear">
					<Title id="title" text="Table des Fournisseurs"/>
					<ToolbarSpacer id="_IDGenToolbarSpacer1"/>
					<Button 
						id="_IDGenButton1"
						icon="sap-icon://activities"
						tooltip="show indices of selected items"
						press="onGetSelectedIndices"/>
					<Button 
						id="_IDGenButton2"
						icon="sap-icon://activity-items"
						tooltip="show context of latest selection item"
						press="onGetContextByIndex"/>
					<Button 
						id="_IDGenButton3"
						icon="sap-icon://decline"
						tooltip="clear selection"
						press="onClearSelection"/>
					<Switch 
						id="_IDGenSwitch1"
						state="true"
						customTextOn="on"
						customTextOff="off"
						tooltip="enable select all items"
						change="onSwitchChange"/>
				</OverflowToolbar>
				<OverflowToolbar id="_IDGenOverflowToolbar2" >
					<ToolbarSpacer id="_IDGenToolbarSpacer2"/>
					<SearchField id="_IDGenSearchField1"
								placeholder="Filter"
								value="{ui>/globalFilter}"
								search="filterGlobally"
								width="15rem"/>
				</OverflowToolbar>
			</table:extension>
            <table:columns>
                <!-- Columns Group  1 : Product & SalesOrder - Start -->
                <table:Column id="_IDGenColumn1">
						<table:multiLabels>
							<Label id="_IDGenLabel1" text="{i18n>Lifnr}" textAlign="Center" width="100%"/>
						</table:multiLabels>
						<table:template>
							<Text id="_IDGenText1" text="{Lifnr}" wrapping="false"/>
						</table:template>
				</table:Column>
                  
				<table:Column id="_IDGenColumn2">
						<table:multiLabels>
							<Label id="_IDGenLabel2" text="{i18n>Land1}" textAlign="Center" width="100%"/>
						</table:multiLabels>
						<table:template>
							<Text id="_IDGenText2" text="{Land1}" wrapping="false"/>
						</table:template>
				</table:Column>

				<table:Column id="_IDGenColumn3">
						<table:multiLabels>
							<Label id="_IDGenLabel3" text="{i18n>Name1}" textAlign="Center" width="100%"/>
						</table:multiLabels>
						<table:template>
							<Text id="_IDGenText3" text="{Name1}" wrapping="false"/>
						</table:template>
				</table:Column>

				<table:Column id="_IDGenColumn4">
						<table:multiLabels>
							<Label id="_IDGenLabel4" text="{i18n>Location}" textAlign="Center" width="100%"/>
						</table:multiLabels>
						<table:template>
							<Text id="_IDGenText4" text="{= ${Stras}}" wrapping="false"/>
							<!-- <Text id= "_IDGenText4" text="{= ${Stras Ort01 Pstmz}}" wrapping="false"/> -->
						</table:template>
				</table:Column>

				<table:Column id="_IDGenColumn7">
						<table:multiLabels>
							<Label id="_IDGenLabel7" text="{i18n>Telf1}" textAlign="Center" width="100%"/>
						</table:multiLabels>
						<table:template>
							<Text id="_IDGenText7" text="{Telf1}" wrapping="false"/>
						</table:template>
				</table:Column>

            </table:columns>
		 </table:Table>
		<!-- Grid Table - End -->
</mvc:View>

